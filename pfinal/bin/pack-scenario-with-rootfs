#!/bin/bash

# Move to the directory where this script is
cdir=$( dirname $0 )
cd $cdir

SCENARIO=$( cat pack-scenario | grep '^SCENARIO' | sed -e 's/^SCENARIO=//') 
VERS=$( cat ../bin/pack-scenario | grep '^VERS' | sed -e 's/^VERS=//' -e "s/['\"]//g" ) 
if ! $VERS; then
  VERS="-v${VERS}"
fi
echo $SCENARIO
echo $VERS

if [ -e ../${SCENARIO::-4}${VERS}.tgz ]; then
    mv -v ../${SCENARIO::-4}${VERS}.tgz ../${SCENARIO::-4}${VERS}.tgz.orig 
fi

if [ -e ../${SCENARIO::-4}${VERS}-with-rootfs.tgz ]; then
    mv -v ../${SCENARIO::-4}${VERS}-with-rootfs.tgz ../${SCENARIO::-4}${VERS}-with-rootfs.tgz.old
fi

./pack-scenario --include-rootfs

mv ../${SCENARIO::-4}${VERS}.tgz ../${SCENARIO::-4}${VERS}-with-rootfs.tgz

if [ -e ../${SCENARIO::-4}${VERS}.tgz.orig ]; then
    mv ../${SCENARIO::-4}${VERS}.tgz.orig ../${SCENARIO::-4}${VERS}.tgz 
fi
